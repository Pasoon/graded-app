<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deliverablelistgradient"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/deliverableList_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Assignment 1"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/deliverableList_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="95.6%"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/deliverableList_gradeColor"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/grade_a">

        </RelativeLayout>

        <TextView
            android:id="@+id/deliverableList_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="15%"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>